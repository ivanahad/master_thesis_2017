/*
 *  UDP server
 */
var PORT = 5678;
//var HOST = 'ip6-localhost';

var dgram = require("dgram");

var udpserver = dgram.createSocket("udp6");

udpserver.on("error", function (err) {
  console.log("server error:\n" + err.stack);
  udpserver.close();
});


udpserver.on("message", function (msg, rinfo) {
  var buf = new Buffer(msg, 'hex');
  console.log("server got: " + msg + " from " +
    rinfo.address + ":" + rinfo.port);
  console.log(netflowHeader.parse(buf));

  var str=JSON.stringify(netflowHeader.parse(buf));
  fs.appendFile("/home/user/Desktop/master_thesis_2017/iot_monitoring/bin/test.txt", str+"\n", function(err) {
    if(err) {
        return console.log(err);
    }

    console.log("The file was saved!");
  }); 
});



//Function to write to a json file the parsed bits. Msg is the parsed object's structure, path is location of written Json file
