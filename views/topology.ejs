<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>IoT monitoring</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <p class="navbar-text">IoT monitoring</p>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li ><a href="/network_traffic">Traffic </a></li>
                    <li class="active"><a href="#">Topology <span class="sr-only">(current)</span></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        Topology
                    </h1>
                </div>
            </div>
            <!-- Chart -->
            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-sitemap"></i> Motes topology</h3>
                        </div>

                        <!--<p id="para1">Un peu de texte. YO</p>-->

                        <div class="panel-body">
                            <svg width="900" height="500"></svg>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Summary</h3>
                        </div>
                            <table class="table table-hover">
                                <tr>
                                    <th> </th>
                                    <th>ID</th>
                                    <th>Parent</th>
                                    <th>Battery</th>
                                    <th>Last Sent</th>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td id="currentID">-</td>
                                    <td id="parent">-</td>
                                    <td id="battery">-</td>
                                    <td id="lastsent">-</td>
                                </tr>
                            </table>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Flows</h3>
                        </div>
                            <table class="table table-hover" id="table_flows">
                                <tr>
                                    <th>Dst</th>
                                    <th>Bytes</th>
                                    <th>Packets</th>
                                </tr>
                            </table>
                    </div>
                </div>

            </div>


        </div>

    </div>

    <script src="/javascripts/jquery-3.2.0.min.js"></script>
    <script src="//d3js.org/d3.v3.min.js"></script>
    <script src="/javascripts/topology.js"></script>
</body>

</html>
