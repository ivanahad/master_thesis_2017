<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>IoT monitoring</title>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css">

</head>

<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <p class="navbar-text">IoT monitoring</p>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Traffic <span class="sr-only">(current)</span></a></li>
                    <li><a href="/topology">Topology</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Traffic
                    </h1>
                </div>
            </div>
            <!-- Chart -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-area-chart"></i> Traffic chart</h3>
                        </div>
                        <div class="panel-body" id="div_traffic" style="width:720px;height:375px;">
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Statistics</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <tr>
                                    <th> </th>
                                    <th>Average</th>
                                    <th>Max</th>
                                </tr>
                                <tr>
                                    <td>Traffic</td>
                                    <td id="traffic_average">-</td>
                                    <td id="traffic_max">-</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="/javascripts/plotly.min.js"></script>
    <script src="/javascripts/graphs.js"></script>
    <script type="text/javascript">
      const data = <%- data %>;
      
      var x = [];
      var time = 0;
      while(time < 60*60){
        x.push(new Date(time * 1000));
        time = time + 60;
      }

      var y = Array(60).fill(0);
      for(var i in data){
        const volume = data[i];
        const index = Math.floor(volume.exportTime / 60) % 60;
        y[index] += volume['octets'];
      }

      plotTraffic(x, y, 'div_traffic');
      var max = Math.max.apply(null, y);
      var sum = y.reduce(function(a, b){ return a + b;}, 0);
      document.getElementById('traffic_average').innerHTML = Math.floor(sum / y.length);
      document.getElementById('traffic_max').innerHTML = max;

    </script>

</body>

</html>
